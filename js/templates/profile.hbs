<div class="handlebar-profile">
  <div class="profile-picture">
    <img class="avatar" src={{avatar_url}} alt="Profile Picture" height="230" />
  </div>
  <div class="profile-name">
    <h2>{{name}}</h2>
    <h3>{{login}}</h3>
  </div>  
  <div class="joined-on-bar">
    <p>Joined on {{created_at}}</p>
  </div>
  <div class="profile-stats">
    <ul>
      <li><span>{{followers}}</span><p>Followers</p></li>
      <li><span>{{totalStars}}</span><p>Starred</p></li>
      <li><span>{{following}}</span><p>Following</p></li>
    </ul>
  </div>
</div>