<div class="handlebar-profile">
  <div class="profile-wrapper">
    <div class="profile-picture">
      <img class="avatar" src={{avatar_url}} alt="Profile Picture" height="230" />
    </div>
    <div class="profile-name">
      <h2>{{name}}</h2>
      <h3>{{login}}</h3>
    </div>  
    <div class="joined-on-bar">
      <p><span class="octicon octicon-clock"></span> Joined on Jan 22, 2015</p>
    </div>
    <div class="profile-stats">
      <ul>
        <li><span class="stat-num">{{followers}}</span><p class="stat">Followers</p></li>
        <li><span class="stat-num">{{totalStars}}</span><p class="stat">Starred</p></li>
        <li><span class="stat-num">{{following}}</span><p class="stat">Following</p></li>
      </ul>
    </div>
  </div>
</div>